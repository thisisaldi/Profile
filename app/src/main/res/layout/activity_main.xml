<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:background="@color/white"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/blue"
    android:elevation="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Profil M. Naufaldi Fadhlirrahman"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="16dp"
      />
  </androidx.appcompat.widget.Toolbar>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/family_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:scaleType="centerCrop"
        android:src="@drawable/keluarga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="32dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"

          >

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Profil Saya"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Pribadi yang selalu ingin belajar dan berimajinasi tinggi"
            android:textColor="@color/grey"
            android:textSize="12dp" />

          <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        </LinearLayout>

        <Space
          android:layout_width="match_parent"
          android:layout_height="24dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Biodata"
          android:textColor="@color/black"
          android:textSize="16dp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="4dp"
          android:text="Nama                   : M. Naufaldi Fadhlirrahman"
          android:textColor="@color/grey"
          android:textSize="12dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="4dp"
          android:text="NIM                     : 2110511054"
          android:textColor="@color/grey"
          android:textSize="12dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="4dp"
          android:text="Program Studi   : S1 Informatika"
          android:textColor="@color/grey"
          android:textSize="12dp" />

        <Space
          android:layout_width="match_parent"
          android:layout_height="12dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Foto Saya"
          android:textColor="@color/black"
          android:textSize="16dp"
          android:textStyle="bold" />

        <Space
          android:layout_width="match_parent"
          android:layout_height="12dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


          <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/saya" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="M. Naufaldi Fadhlirrahman"
              android:textColor="@color/black"
              android:textSize="16dp"
              android:textStyle="bold" />

            <Space
              android:layout_width="match_parent"
              android:layout_height="8dp" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Mahasiswa Program Studi S1 Informatika Universitas Pembangunan Nasional Veteran Jakarta"
              android:textColor="@color/grey"
              android:textSize="12dp" />
          </LinearLayout>

        </LinearLayout>

        <Space
          android:layout_width="match_parent"
          android:layout_height="24dp" />


        <Button
          android:id="@+id/jadwal_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_button"
          android:text="Detail Jadwal Mata Kuliah Semester 6"
          android:textColor="@color/white"
          android:textStyle="bold" />


      </LinearLayout>
    </LinearLayout>
  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
